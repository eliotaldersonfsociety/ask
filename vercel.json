{
  "version": 2,
  "builds": [
    {
      "src": "front/package.json",
      "use": "@vercel/next"
    },
    {
      "src": "api/src/index.ts",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/src/$1"  // Cambiado para que apunte a la estructura correcta
    },
    {
      "src": "/(.*)",
      "dest": "/front/$1"
    }
  ]
}
